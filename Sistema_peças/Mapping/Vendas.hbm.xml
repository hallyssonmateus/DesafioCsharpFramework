<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Sistema_peças" namespace="Sistema_peças.Model">
	<class name="Vendas" table="Vendas">
		<!-- ID da Venda -->
		<id name="Id" column="Id" type="int">
			<generator class="identity" />
		</id>

		<!-- Relacionamento com a Peça -->
		<property name="PecaId" column="PecaId" />

		<!-- Quantidade de itens vendidos -->
		<property name="QuantidadeVendida" column="QuantidadeVendida" />

		<!-- Valor da Venda -->
		<property name="ValorVenda" column="ValorVenda" />

		<!-- Data da Venda -->
		<property name="DataVenda" column="DataVenda" />
	</class>
</hibernate-mapping>
